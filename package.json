{
  "name": "Translight",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "copy-public-dist": "cp -r src/dist ./ && rm -rf src/dist",
    "build": "vite build && node script/build.cjs && npm run build:content && npm run copy-public-dist",
    "build:content": "vite build --config vite.content.config.ts",
    "dev": "npm run build && vite build --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --plugin-search-dir . --write .",
    "lint": "prettier --plugin-search-dir . --check ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/firefox-webext-browser": "^120.0.3",
    "@types/node": "^20.12.12",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.3",
    "svelte": "^4.2.17",
    "svelte-check": "^3.7.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "dompurify": "^3.1.3",
    "query-string": "^9.0.0"
  }
}
